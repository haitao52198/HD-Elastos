# This file defines the Kconfig menu structure.

mainmenu "Project Configuration"

config COMMON_PATH
    string
    option env="COMMON_PATH"

menu "seL4 Libraries"
    source "libs/drivers/Kconfig"
    source "libs/FileSystem/Kconfig"
    source "libs/Net/Kconfig"
endmenu

source "$COMMON_PATH/Kconfig"
